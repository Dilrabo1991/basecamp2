<div class="card" style="width: 80%;">
  <div class="card-header">
    <%= render @yuk %>
  </div>

  <div class="card-body">
    <div class="row">
      <%= link_to "Edit this yuk", edit_yuk_path(@yuk) , class:"allbuttons col-6 text-center" %>
      <%= link_to "Back to yuks", yuks_path , class:"allbuttons col-6 text-center"%>
    </div>
    <%= button_to "Destroy this yuk", @yuk, method: :delete , class:"btn btn-danger btn-hover button rounded-pill p-2 more-link col-2 text-center" %>
  </div>
  <style>
  .button{
        padding-left: 20px;
        display: block;
        margin: 0 auto;
        padding: 0 20px;
        background: #ffa580;
        border: 1px solid #000;
        box-shadow: 5px 5px #95A4FF;
      }
  </style>
</div>
